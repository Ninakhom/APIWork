generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  Admin
  Student
  Company
}

model CagetoryWork {
  id        Int     @id @default(autoincrement())
  category  String
  isDeleted Boolean @default(false)

  @@unique([category])
}

model Position {
  id        Int     @id @default(autoincrement())
  position  String
  isDeleted Boolean @default(false)

  @@unique([position])
}

model User {
  id         Int     @id @default(autoincrement())
  username   String
  password   String
  role       Role
  aproveUser Boolean @default(false)

  @@unique([username])
}
